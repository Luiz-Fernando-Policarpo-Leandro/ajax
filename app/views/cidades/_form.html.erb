<%= form_with(model: cidade) do |form| %>
  <% if cidade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cidade.errors.count, "error") %> prohibited this cidade from being saved:</h2>

      <ul>
        <% cidade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :estado_id, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= form.select :estado_id, Estado.all.collect { |estado| [estado.nome, estado.id] }, :selected => @cidade.estado_id %>
    </div>
  </div>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
